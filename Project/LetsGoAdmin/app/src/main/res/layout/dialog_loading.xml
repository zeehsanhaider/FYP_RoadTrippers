<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/space_standard">

        <TextView
            android:id="@+id/tx_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gibson_regular"
            android:gravity="center"
            android:text="@string/upload_image_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="?attr/colorSecondary" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/space_small" />

        <TextView
            android:id="@+id/tx_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_image_desc"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
            android:textColor="@color/appColorSecondary" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/space_medium" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorColor="@color/appColorPrimary"
            android:indeterminate="true"
            android:layout_gravity="center"
            android:indeterminateTint="@color/appColorPrimary"
            app:trackColor="@color/grey_3"
            />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>